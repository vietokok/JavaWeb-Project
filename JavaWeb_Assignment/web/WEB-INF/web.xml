<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminGUIController</servlet-name>
        <servlet-class>controller.AdminGUIController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateClassController</servlet-name>
        <servlet-class>controller.CreateClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditClassController</servlet-name>
        <servlet-class>controller.EditClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteClassController</servlet-name>
        <servlet-class>controller.DeleteClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentController</servlet-name>
        <servlet-class>controller.StudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OptionStudentController</servlet-name>
        <servlet-class>controller.OptionStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterOldStudentController</servlet-name>
        <servlet-class>controller.RegisterOldStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListStudentByClassController</servlet-name>
        <servlet-class>controller.ListStudentByClassController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteStudentController</servlet-name>
        <servlet-class>controller.DeleteStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditStudentController</servlet-name>
        <servlet-class>controller.EditStudentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminGUIController</servlet-name>
        <url-pattern>/admin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateClassController</servlet-name>
        <url-pattern>/createClass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditClassController</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteClassController</servlet-name>
        <url-pattern>/deleteClass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentController</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OptionStudentController</servlet-name>
        <url-pattern>/OptionStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterOldStudentController</servlet-name>
        <url-pattern>/RegisterOldStudent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListStudentByClassController</servlet-name>
        <url-pattern>/ListStudentByClassController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteStudentController</servlet-name>
        <url-pattern>/DeleteStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditStudentController</servlet-name>
        <url-pattern>/EditStudentController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
